	<script>
		$(document).ready(function () {

			$('.addtocart').on('click', function () {
				var idFrombutton = $(this).data('id');
				console.log(idFrombutton)

				const session = '<%=session %>';
				console.log(session);
				console.log("session Printing");
				console.log(session);

				const data = {
					_id: idFrombutton,
					userid: session
				};

				$.ajax({
					url: `/addtocart`,
					method: "put",
					data: data,
					success: function (response) {

						toastr.options = {
							"closeButton": false,
							"debug": false,
							"newestOnTop": false,
							"progressBar": false,
							"positionClass": "toast-top-right",
							"preventDuplicates": false,
							"showDuration": "200",
							"hideDuration": "500",
							"timeOut": "1000",
							"extendedTimeOut": "1000",
							"showEasing": "swing",
							"hideEasing": "linear",
							"showMethod": "fadeIn",
							"hideMethod": "fadeOut"
						};

						if (response.message == "product already added") {
							toastr["info"]("Product Already Added to your cart", "Don't worry");
						} else {
							toastr["success"]("Product Added to the cart", "Added");
						}
					}
				});

			})


