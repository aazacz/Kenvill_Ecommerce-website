    const menuLink= document.querySelectorAll('.menu-link')
    const menuUrl = window.location.href

    console.log(menuLink);
    menuLink.forEach((link) => {
        link.addEventListener('click',function(event){

            const clickedButton  = event.target;
            const parentListItem = clickedButton.closest('.menu-item')

            
            // first remove the ACTIVE class from all the menu items
            const menuItems=document.querySelectorAll('.menu-item')
            console.log(menuItems);
            
            
            //this remove the active class from all the class list
            menuItems.forEach(function(item){   item.classList.remove('active')  })
                parentListItem.classList.add('active');   // Add "active" class to the clicked menu item


            })

            //second check the button link and the window location link if they are smae add active class
            if(link.href===menuUrl){
                const parentList = link.closest('.menu-item')
                parentList.classList.add('active')
                console.log(parentList);
                //this add the active class to the clicked linik
            }

       
        
    }); 

  </script>
  

